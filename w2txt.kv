#:import get_color_from_hex kivy.utils.get_color_from_hex
<Window2txt>:
    BoxLayout:
        orientation: 'vertical'
        md_bg_color: get_color_from_hex("#010101")
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .25
            BoxLayout: # панель кнопок 1-ая сточка
                size_hint: 1, .5
                MDIconButton
                    icon: "file-music"
                    pos_hint:{"center_x": .5, "center_y": .5}
                    on_release: root.open_music_file_dialog(self)

                MDIconButton:
                    icon: "file-video"
                    pos_hint:{"center_x": .5, "center_y": .5}
                    adaptive_height: True
                MDIconButton:
                    icon: "export"
                    pos_hint:{"center_x": .5, "center_y": .5}
                    adaptive_height: True

                MDIconButton:
                    icon: "chevron-left"
                    pos_hint:{"center_x": .5, "center_y": .5}
                    adaptive_height: True
                MDIconButton:
                    icon: "play-circle-outline"
                    pos_hint:{"center_x": .5, "center_y": .5}
                    adaptive_height: True
                    on_release: root.play_music()
                MDIconButton:
                    icon: "pause-circle-outline"
                    adaptive_height: True
                    pos_hint: {"center_x": .5, "center_y": .5}
                    on_release: root.stop_music()
                MDIconButton:
                    icon: "chevron-right"
                    pos_hint:{"center_x": .5, "center_y": .5}
                    adaptive_height: True
                    on_release:
                MDIconButton:
                    icon:"volume-mute"
                    pos_hint:{"center_x": .5, "center_y": .5}
                    adaptive_height: True
                BoxLayout: # Регулировка громкости
                    size_hint: .2 , 1
                    MDSlider:
                        hint: False
                        adaptive_height: True
                MDIconButton:
                    icon: "volume-high"
                    pos_hint:{"center_x": .5, "center_y": .5}
                    adaptive_height: True
                MDIconButton:
                    icon: "book-information-variant"
                    pos_hint:{"center_x": .5, "center_y": .5}
                    adaptive_height: True
                Label:
                BoxLayout: # ввод времени и кнопка активации распознавания
                    padding: 1
                    spacing: 3
                    TextInput:
                        size_hint: 1, .6
                        multiline: False
                        font_size: 14
                        text: "0:00:00"
                        pos_hint:{"center_x": .5, "center_y": .5}
                    TextInput:
                        size_hint: 1, .6
                        multiline: False
                        font_size: 14
                        text: "0:00:00"
                        pos_hint:{"center_x": .5, "center_y": .5}
                    MDIconButton:
                        icon: "microphone-message"
                        pos_hint:{"center_x": .5, "center_y": .5}
                        adaptive_height: True
                    MDIconButton:
                        icon:"bug-check-outline"
                        pos_hint:{"center_x": .5, "center_y": .5}
                        adaptive_height: True
                        on_release:
                            app.fps_check()
            MDBoxLayout: # текущее время поспроизведения
                size_hint: 1, .4
                MDLabel:
                    id: timenow
                    text: "0:00:00"
                    adaptive_height: True
                    bold: True
                    halign: "center"
                    size_hint: .1, 1

                MDSlider: # слайдер перемотки
                    id: seek_slider
                    hint: False

                MDLabel: # время всей аудиозаписи
                    text: "1:56:23"
                    adaptive_height: True
                    bold: True
                    halign: "center"
                    size_hint: .1, 1

            MDBoxLayout: # Вторая строчка кнопок
                size_hint: 1, .5
                padding: 4
                spacing: 5
                MDRectangleFlatButton:
                    text:"[Время]"
                    pos_hint:{"center_x": 0.5, "center_y": 0.5}
                    adaptive_height: True
                MDRectangleFlatButton:
                    text:"<М1>"
                    pos_hint:{"center_x": 0.5, "center_y": 0.5}
                    adaptive_height: True
                MDRectangleFlatButton:
                    text:"<М2>"
                    pos_hint:{"center_x": 0.5, "center_y": 0.5}
                    adaptive_height: True
                MDRectangleFlatButton:
                    text:"<М3>"
                    pos_hint:{"center_x": 0.5, "center_y": 0.5}
                    adaptive_height: True
                MDRectangleFlatButton:
                    text:"<М4>"
                    pos_hint:{"center_x": 0.5, "center_y": 0.5}
                    adaptive_height: True
                MDRectangleFlatButton:
                    text:"<Ж1>"
                    pos_hint:{"center_x": 0.5, "center_y": 0.5}
                    adaptive_height: True
                MDRectangleFlatButton:
                    text:"<Ж2>"
                    pos_hint:{"center_x": 0.5, "center_y": 0.5}
                    adaptive_height: True
                MDRectangleFlatButton:
                    text:"<Ж3>"
                    pos_hint:{"center_x": 0.5, "center_y": 0.5}
                    adaptive_height: True
                MDRectangleFlatButton:
                    text:"<Ж4>"
                    pos_hint:{"center_x": 0.5, "center_y": 0.5}
                    adaptive_height: True
                MDRectangleFlatButton:
                    text:"<Неразбочивая речь>"
                    pos_hint:{"center_x": 0.5, "center_y": 0.5}
                    adaptive_height: True
                MDRectangleFlatButton:
                    text:"<Неразбочивая речь на фоне>"
                    pos_hint:{"center_x": 0.5, "center_y": 0.5}
                    adaptive_height: True


        BoxLayout: # разбиение нижней области вертикально на 2 части
            orientation:'horizontal'
            BoxLayout: # разбиение на области с кнопками и область ввода текста(левая)
                orientation: "vertical"
                BoxLayout:
                    orientation:'horizontal'
                    size_hint: 1, .1
                    MDIconButton:
                        icon: "folder-open-outline"
                        pos_hint:{"center_x": .5, "center_y": .5}
                        adaptive_height: True
                        on_release: root.open_21_file_dialog()
                    MDIconButton:
                        icon: "content-save-outline"
                        pos_hint:{"center_x": .5, "center_y": .5}
                        adaptive_height: True
                        on_release: root.save_21_text_to_file()
                    MDIconButton:
                        icon:"format-font-size-decrease"
                        pos_hint:{"center_x": .5, "center_y": .5}
                        adaptive_height: True
                        on_release: root.decrease_font_size2()
                    MDIconButton:
                        icon:"format-font-size-increase"
                        pos_hint:{"center_x": .5, "center_y": .5}
                        adaptive_height: True
                        on_release: root.increase_font_size2()
                    Label:



                TextInput:
                    text: "text editor area 1!"
                    auto_indent: "False"
                    base_direction: "ltr"
                    id: txt21
                    font_name: "TimesNewRoman"

            BoxLayout: # разбиение на области с кнопками и область ввода текста(правая)
                orientation: "vertical"
                BoxLayout:
                    orientation:'horizontal'
                    size_hint: 1, .1
                    MDIconButton:
                        icon: "folder-open-outline"
                        pos_hint:{"center_x": .5, "center_y": .5}
                        on_release:root.open_22_file_dialog()
                    MDIconButton:
                        icon: "content-save-outline"
                        pos_hint:{"center_x": .5, "center_y": .5}
                        on_release: root.save_22_text_to_file()

                    Label:
                    MDIconButton:
                        icon:"vector-intersection"
                        pos_hint:{"center_x": .5, "center_y": .5}
                        adaptive_height: True
                        on_release: root.find_differences()
                        state: 'normal'
                    MDIconButton:
                        icon:"vector-combine"
                        pos_hint:{"center_x": .5, "center_y": .5}
                        adaptive_height: True
                        on_release: root.remove_differences()
                        state: 'normal'
                    MDIconButton:
                        icon: "dock-window"
                        pos_hint:{"center_x": .5, "center_y": .5}
                        adaptive_height: True
                        on_release:
                            root.manager.current = 'S1T'
                TextInput:
                    text: "text editor area 2!"
                    base_direction: "ltr"
                    id: txt22
                    font_name: "TimesNewRoman"

        BoxLayout:
            size_hint: 1, .02
            MDLabel:
                halign:"center"
                font_size: "11px"
                text:"Имя файла:"
            MDLabel:
                halign:"center"
                font_size: "11px"
                text:"Длительность:"
            MDLabel:
                halign:"center"
                text:"Рармер файла:"
                font_size: "11px"
            MDLabel:
                halign:"center"
                text:"Частота дискретизации: "
                font_size: "11px"
            MDLabel:
                halign:"center"
                text:"Интенсивность звука:  дБ"
                font_size: "11px"
        BoxLayout:
            size_hint: 1, .03
            MDLabel:
                id: mfname
                halign:"center"
                font_size: "11px"
                text:
            MDLabel:
                halign:"center"
                id: mfdur
                font_size: "11px"
                text:
            MDLabel:
                halign:"center"
                id: mfsize
                text:
                font_size: "11px"
            MDLabel:
                halign:"center"
                id: mfdiscr
                text:
                font_size: "11px"
            MDLabel:
                id: tm1
                halign:"center"
                text:
                font_size: "11px"
