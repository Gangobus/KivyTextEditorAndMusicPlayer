<SettingsPopup>:
    title: 'Shortcut Settings'
    size_hint: 0.9, 0.9

    BoxLayout:
        orientation: 'vertical'
        spacing: '5dp'

        GridLayout:
            cols: 2
            spacing: '5dp'

            Label:
                text: "Ctrl+1"
            TextInput:
                text: root.shortcut_labels['Ctrl+1']
                hint_text: "<M1>"

            Label:
                text: "Ctrl+2"

            TextInput:
                text: root.shortcut_labels['Ctrl+2']
                hint_text: "<M2>"

            Label:
                text: "Ctrl+3"

            TextInput:
                text: root.shortcut_labels['Ctrl+3']
                hint_text: "<M3>"

            Label:
                text: "Ctrl+4"

            TextInput:
                text: root.shortcut_labels['Ctrl+4']
                hint_text: "<Ж1>"

            Label:
                text: "Ctrl+5"

            TextInput:
                text: root.shortcut_labels['Ctrl+5']
                hint_text: "<Ж2>"

            Label:
                text: "Ctrl+6"

            TextInput:
                text: root.shortcut_labels['Ctrl+6']
                hint_text: "<Ж3>"

            Label:
                text: "Ctrl+7"

            TextInput:
                text: root.shortcut_labels['Ctrl+7']
                hint_text: "<Неразборчивая речь>"

            Label:
                text: "Ctrl+8"

            TextInput:
                text: root.shortcut_labels['Ctrl+8']
                hint_text: "<Н>"

            Label:
                text: "Ctrl+9"

            TextInput:
                text: root.shortcut_labels['Ctrl+9']
                hint_text: "<О>"

            Label:
                text: "Ctrl+0"

            TextInput:
                text: root.shortcut_labels['Ctrl+0']
                hint_text: "<Текущее время воспроизведения>"
        Button:
            size_hint: (1, 0.1)
            text: 'Save'
            on_release: root.save_settings()

