<WindowInterface>:
    BoxLayout:
        orientation: 'vertical'
        md_bg_color: get_color_from_hex("#010101")
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.15
            canvas.before:
                Color:
                    rgba: 169/255, 251/255, 215/255, 0.4 # Цвет фона (фиолетовый)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15, 15, 15, 15]
            BoxLayout: # панель кнопок 1-ая сточка
                id: topbuttons
                size_hint: 1, .5
                MDIconButton:
                    icon: "file-music"
                    pos_hint:{"center_x": .5, "center_y": .5}
                    on_release: root.on_open_music_file_dialog()
                MDIconButton:
                    icon: "file-video"
                    pos_hint:{ "center_y": .5}
                    adaptive_height: True
                    on_release: root.play_video()
                MDIconButton:
                    icon: "chevron-left"
                    pos_hint:{"center_x": .5, "center_y": .5}
                    adaptive_height: True
                    on_release: root.rewindminus()
                MDIconButton:
                    id: stop_audio
                    icon: "stop-circle-outline"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    on_release: root.stop_audio()
                MDIconButton:
                    id: play_pause_button
                    icon: "play-pause"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    adaptive_height: True
                    on_release: root.playandpause()
                MDIconButton:
                    icon: "chevron-right"
                    pos_hint:{"center_x": .5, "center_y": .5}
                    adaptive_height: True
                    on_release: root.rewindplus()
                MDIconButton:
                    icon:"volume-mute"
                    pos_hint:{"center_x": .5, "center_y": .5}
                    adaptive_height: True
                    on_release: root.mute()
                MDIconButton:
                    icon: "volume-high"
                    pos_hint:{"center_x": .5, "center_y": .5}
                    adaptive_height: True
                    on_release: root.unmute()
                Label:
                MDIconButton:
                    icon: "microphone-message"
                    pos_hint:{"center_x": .5, "center_y": .5}
                    adaptive_height: True
                    on_release: root.spech_recogn()

            Label:
                size_hint: 1, 0.01

            MDBoxLayout: # текущее время поспроизведения
                size_hint: 1, .2
                MDLabel:
                    id: musictimenow
                    text: "0:00:00"
                    adaptive_height: True
                    bold: True
                    halign: "center"
                    size_hint: .1, 1
                MDSlider:
                    id: seek_slider
                    min: 0
                    max: 1
                    hint: False
                    on_touch_move: root.on_seek_slider_value(self, self.value)
                MDLabel: # время всей аудиозаписи
                    id: totalduration
                    text: "0:00:00"
                    adaptive_height: True
                    bold: True
                    halign: "center"
                    size_hint: .1, 1
            Label:
                size_hint: 1, 0.1

        BoxLayout: # разбиение нижней области вертикально на 2 части
            orientation:'horizontal'
            id: bta
            canvas.before:
                Color:
                    rgba: 178/255, 228/255, 219/255, 0.4 # Цвет фона (фиолетовый)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15, 15, 15, 15]
            BoxLayout: # разбиение на области с кнопками и область ввода текста(левая)
                orientation: "vertical"
                BoxLayout:
                    orientation:'horizontal'
                    size_hint: 1, .07
                    id: textbuttonsarea
                    MDIconButton:
                        icon: "folder-open-outline"
                        pos_hint:{"center_x": .5, "center_y": .5}
                        adaptive_height: True
                        on_release: root.open_txt_file_dialog()
                    MDIconButton:
                        icon: "content-save-outline"
                        pos_hint:{"center_x": .5, "center_y": .5}
                        adaptive_height: True
                        on_release: root.save_text_to_file()
                    MDIconButton:
                        icon:"format-font-size-decrease"
                        pos_hint:{"center_x": .5, "center_y": .5}
                        adaptive_height: True
                        on_release: root.decrease_font_size1()
                    MDIconButton:
                        icon:"format-font-size-increase"
                        pos_hint:{"center_x": .5, "center_y": .5}
                        adaptive_height: True
                        on_release: root.increase_font_size1()
                    Label:
                    MDIconButton:
                        icon: "dock-window"
                        pos_hint:{"center_x": .5, "center_y": .5}
                        adaptive_height: True
                        on_press:
                            root.txt2()
                BoxLayout:
                    TextInput:
                        text: "Добро пожаловть в BelScribe!"
                        auto_indent: "False"
                        base_direction: "ltr"
                        background_color: get_color_from_hex("ECFEF6")
                        id: txt1

