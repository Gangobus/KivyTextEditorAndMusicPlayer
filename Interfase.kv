        BoxLayout:
            size_hint: 1, .03
            canvas.before:
                Color:
                    rgba: 169/255, 251/255, 215/255, 0.4 #
                Rectangle:
                    pos: self.pos
                    size: self.size
            MDLabel:
                id: mfname
                halign:"center"
                font_size: "14px"
                text:
            MDLabel:
                halign:"center"
                id: mfdur
                font_size: "14px"
                text:
            MDLabel:
                halign:"center"
                id: mfsize
                text:
                font_size: "14px"
            MDLabel:
                halign:"center"
